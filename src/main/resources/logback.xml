<configuration>
  <!--disable logback status lines (causes noise in CI. should be enabled in "prod"-->
  <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

  <appender name="stash" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
    <destination>"${stashDest}"</destination>
    <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>${stashLevel:-OFF}</level>
    </filter>
  </appender>


  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-4relative [%thread] %highlight(%-5level) %logger{35} - %msg %ex %mdc %n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>${consoleLevel:-DEBUG}</level>
    </filter>
  </appender>

  <root level="ALL">
    <appender-ref ref="stash"/>
    <appender-ref ref="console"/>
  </root>
</configuration>
